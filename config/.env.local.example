# Digital FTE Local Agent Configuration
# ========================================
# This configuration is for the LOCAL AGENT running on your personal machine.
# The Local Agent has FULL execution capabilities and stores all credentials.
#
# SECURITY: This file contains SENSITIVE credentials. NEVER commit to Git!
# ========================================

# ===========================================
# WORK-ZONE CONFIGURATION (CRITICAL)
# ===========================================

# Work-zone: cloud = draft only, local = full execution
WORK_ZONE=local

# Unique identifier for this agent
AGENT_ID=local-laptop-001

# Agent display name
AGENT_NAME=Local Agent (Approval Mode)

# ===========================================
# VAULT & GIT SYNC
# ===========================================

# Path to the Obsidian vault (Windows path)
VAULT_PATH=D:\Hacathan_2\Vault

# Git remote URL
GIT_REMOTE=git@github.com:username/digital-fte-vault.git

# Git sync interval in seconds
GIT_SYNC_INTERVAL=30

# ===========================================
# WATCHERS (Local-Enabled)
# ===========================================

# Gmail watcher - DISABLED (Cloud handles this)
GMAIL_ENABLED=false

# WhatsApp watcher - enabled for local monitoring
WHATSAPP_ENABLED=true
WHATSAPP_POLL_INTERVAL=60

# LinkedIn watcher - DISABLED (Cloud handles this)
LINKEDIN_ENABLED=false

# Filesystem watcher - LOCAL ONLY
FILESYSTEM_ENABLED=true
FILESYSTEM_WATCH_PATH=D:\Hacathan_2\Vault\Needs_Action

# ===========================================
# MCP SERVERS (ALL ENABLED ON LOCAL)
# ===========================================

# Email MCP - ENABLED with credentials
EMAIL_MCP_ENABLED=true

# Odoo Accounting MCP - ENABLED with credentials
ODOO_MCP_ENABLED=true

# Meta Social MCP - ENABLED with credentials
META_SOCIAL_MCP_ENABLED=true

# Twitter/X MCP - ENABLED with credentials
TWITTER_MCP_ENABLED=true

# WhatsApp MCP - ENABLED with credentials
WHATSAPP_MCP_ENABLED=true

# ===========================================
# GMAIL CREDENTIALS (LOCAL ONLY - NEVER SYNC)
# ===========================================

GMAIL_ADDRESS=your_email@gmail.com
GMAIL_APP_PASSWORD=xxxx_xxxx_xxxx_xxxx

# ===========================================
# ODOO CREDENTIALS (LOCAL ONLY - NEVER SYNC)
# ===========================================

ODOO_URL=http://localhost:8069
ODOO_DB=digital_fte
ODOO_USERNAME=admin
ODOO_PASSWORD=your_odoo_password_here

# ===========================================
# META SOCIAL CREDENTIALS (LOCAL ONLY - NEVER SYNC)
# ===========================================

META_ACCESS_TOKEN=EAAxxxxxxxxxxxxxxxxxxxxxxxxxx
FACEBOOK_PAGE_ID=123456789012345
INSTAGRAM_ACCOUNT_ID=987654321098765
GRAPH_API_VERSION=v18.0

# ===========================================
# TWITTER/X CREDENTIALS (LOCAL ONLY - NEVER SYNC)
# ===========================================

TWITTER_API_KEY=your_consumer_key_here
TWITTER_API_SECRET=your_consumer_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_SECRET=your_access_token_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# ===========================================
# WHATSAPP CREDENTIALS (LOCAL ONLY - NEVER SYNC)
# ===========================================

WHATSAPP_PHONE_NUMBER=+1234567890
WHATSAPP_SESSION_PATH=config/whatsapp_data

# ===========================================
# ORCHESTRATOR SETTINGS
# ===========================================

# Maximum concurrent tasks
MAX_CONCURRENT_TASKS=10

# Task timeout in seconds
TASK_TIMEOUT=600

# Poll interval for checking new tasks
POLL_INTERVAL=30

# Maximum AI iterations per task
MAX_ITERATIONS=10

# ===========================================
# RATE LIMITS (per Company Handbook)
# ===========================================

# Maximum emails per hour
RATE_LIMIT_EMAILS_HOUR=10

# Maximum payments per hour
RATE_LIMIT_PAYMENTS_HOUR=3

# Maximum social posts per day
RATE_LIMIT_SOCIAL_DAY=5

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Maximum auto-approve payment amount (USD)
MAX_AUTO_APPROVE_AMOUNT=100

# Require approval for new recipients
REQUIRE_APPROVAL_NEW_RECIPIENTS=true

# Enable dry run mode (no actual actions)
DRY_RUN=false

# ===========================================
# LOGGING
# ===========================================

# Logging level
LOG_LEVEL=INFO

# Audit log path
AUDIT_LOG_PATH=D:\Hacathan_2\Vault\Logs\audit

# Health log path
HEALTH_LOG_PATH=D:\Hacathan_2\Vault\Logs\health

# ===========================================
# RESOURCE LIMITS
# ===========================================

# Memory limit in MB
MEMORY_LIMIT_MB=16384

# ===========================================
# AI AGENT
# ===========================================

# AI model to use
AI_MODEL=gemini-2.0-flash


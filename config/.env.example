# Digital FTE Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# GENERAL SETTINGS
# ===========================================

# Enable dry run mode (no actual actions)
DRY_RUN=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# GMAIL WATCHER
# ===========================================

# Gmail polling interval in seconds
GMAIL_POLL_INTERVAL=60

# Maximum emails to process per poll
GMAIL_MAX_EMAILS=10

# ===========================================
# ORCHESTRATOR
# ===========================================

# Maximum Claude Code iterations per task
MAX_ITERATIONS=10

# Poll interval for checking new tasks (seconds)
POLL_INTERVAL=30

# ===========================================
# RATE LIMITS (per handbook)
# ===========================================

# Maximum emails per hour
RATE_LIMIT_EMAILS_HOUR=10

# Maximum payments per hour
RATE_LIMIT_PAYMENTS_HOUR=3

# ===========================================
# SECURITY
# ===========================================

# Maximum auto-approve payment amount
MAX_AUTO_APPROVE_AMOUNT=100

# Require approval for new recipients
REQUIRE_APPROVAL_NEW_RECIPIENTS=true

# ===========================================
# LINKEDIN POSTING (Gold Phase)
# ===========================================

# LinkedIn automation mode (headless or visible browser)
LINKEDIN_HEADLESS=false

# LinkedIn posting enabled
LINKEDIN_ENABLED=true

# LinkedIn rate limits (enforced by scheduler)
LINKEDIN_MAX_POSTS_PER_DAY=2
LINKEDIN_MAX_POSTS_PER_HOUR=1

# ===========================================
# ODOO ACCOUNTING (Gold Phase)
# ===========================================

# Odoo server URL (localhost for self-hosted)
ODOO_URL=http://localhost:8069

# Odoo database name
ODOO_DB=digital_fte

# Odoo credentials
ODOO_USERNAME=admin
ODOO_PASSWORD=your_odoo_password_here


# Digital FTE Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# PLATINUM TIER (Cloud + Local)
# ===========================================

# Role of this instance (cloud or local)
FTE_ROLE=local

# Unique ID for this agent
AGENT_ID=local-01

# Git Vault Sync interval (seconds)
SYNC_INTERVAL=300

# ===========================================
# GENERAL SETTINGS
# ===========================================

# Enable dry run mode (no actual actions)
DRY_RUN=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# GMAIL WATCHER
# ===========================================

# Gmail polling interval in seconds
GMAIL_POLL_INTERVAL=60

# Maximum emails to process per poll
GMAIL_MAX_EMAILS=10

# ===========================================
# ORCHESTRATOR
# ===========================================

# Maximum Claude Code iterations per task
MAX_ITERATIONS=10

# Poll interval for checking new tasks (seconds)
POLL_INTERVAL=30

# ===========================================
# RATE LIMITS (per handbook)
# ===========================================

# Maximum emails per hour
RATE_LIMIT_EMAILS_HOUR=10

# Maximum payments per hour
RATE_LIMIT_PAYMENTS_HOUR=3

# ===========================================
# SECURITY
# ===========================================

# Maximum auto-approve payment amount
MAX_AUTO_APPROVE_AMOUNT=100

# Require approval for new recipients
REQUIRE_APPROVAL_NEW_RECIPIENTS=true

# ===========================================
# LINKEDIN POSTING (Gold Phase)
# ===========================================

# LinkedIn automation mode (headless or visible browser)
LINKEDIN_HEADLESS=false

# LinkedIn posting enabled
LINKEDIN_ENABLED=true

# LinkedIn rate limits (enforced by scheduler)
LINKEDIN_MAX_POSTS_PER_DAY=2
LINKEDIN_MAX_POSTS_PER_HOUR=1

# ===========================================
# ODOO ACCOUNTING (Gold Phase)
# ===========================================

# Odoo server URL (localhost for self-hosted)
ODOO_URL=http://localhost:8069

# Odoo database name
ODOO_DB=digital_fte

# Odoo credentials
ODOO_USERNAME=admin
ODOO_PASSWORD=your_odoo_password_here

# ===========================================
# META SOCIAL (Facebook & Instagram) (Gold Phase)
# ===========================================

# Meta Graph API Access Token
META_ACCESS_TOKEN=your_meta_access_token_here

# Facebook Page ID
FACEBOOK_PAGE_ID=your_facebook_page_id_here

# Instagram Business Account ID
INSTAGRAM_ACCOUNT_ID=your_instagram_account_id_here

# Graph API Version
GRAPH_API_VERSION=v18.0

# ===========================================
# TWITTER/X (Gold Phase)
# ===========================================

# Twitter API v2 Credentials
# Note: Consumer Key = API Key, Consumer Secret = API Secret in Twitter portal
TWITTER_API_KEY=your_consumer_key_here
TWITTER_API_SECRET=your_consumer_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_SECRET=your_access_token_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# ===========================================
# FIREBASE CLOUD MESSAGING (Mobile Push)
# ===========================================

# Path to Firebase service account JSON (download from Firebase Console)
# FIREBASE_SERVICE_ACCOUNT=config/firebase-service-account.json

# ===========================================
# TELEGRAM BOT (Notification Fallback)
# ===========================================

# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your personal chat ID (get from @userinfobot)
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===========================================
# PUSH NOTIFICATIONS
# ===========================================

# VAPID keys for Web Push (optional)
# VAPID_SUBJECT=mailto:admin@abdullahjunior.local
# VAPID_PRIVATE_KEY=your_private_key_here
# VAPID_PUBLIC_KEY=your_public_key_here

# ===========================================
# PATHS (optional, defaults provided)
# ===========================================

# VAULT_PATH=./Vault
# CONFIG_PATH=./config
# LOGS_PATH=./Vault/Logs

# Digital FTE Cloud Agent Configuration
# ========================================
# This configuration is for the CLOUD AGENT running on Oracle Cloud VM.
# The Cloud Agent operates in DRAFT-ONLY mode and cannot execute sensitive actions.
#
# SECURITY: This file contains NO credentials. All MCP servers are disabled.
# ========================================

# ===========================================
# WORK-ZONE CONFIGURATION (CRITICAL)
# ===========================================

# Work-zone: cloud = draft only, local = full execution
WORK_ZONE=cloud

# Unique identifier for this agent
AGENT_ID=cloud-oracle-001

# Agent display name
AGENT_NAME=Cloud Agent (Draft Mode)

# ===========================================
# VAULT & GIT SYNC
# ===========================================

# Path to the Obsidian vault (Linux path for Oracle VM)
VAULT_PATH=/home/digitalfte/Hacathan_2/Vault

# Git remote URL (SSH format for deploy key auth)
GIT_REMOTE=git@github.com:username/digital-fte-vault.git

# Git sync interval in seconds
GIT_SYNC_INTERVAL=30

# ===========================================
# WATCHERS (Cloud-Enabled)
# ===========================================

# Gmail watcher - monitors inbox for new emails
GMAIL_ENABLED=true
GMAIL_POLL_INTERVAL=300

# WhatsApp watcher - monitors for new messages
WHATSAPP_ENABLED=true
WHATSAPP_POLL_INTERVAL=60

# LinkedIn watcher - monitors for messages/connections
LINKEDIN_ENABLED=true
LINKEDIN_POLL_INTERVAL=600

# Filesystem watcher - LOCAL ONLY (disabled on cloud)
FILESYSTEM_ENABLED=false

# ===========================================
# MCP SERVERS (ALL DISABLED ON CLOUD)
# ===========================================

# Email MCP - DISABLED (no credentials, cannot send)
EMAIL_MCP_ENABLED=false

# Odoo Accounting MCP - DISABLED (no credentials)
ODOO_MCP_ENABLED=false

# Meta Social MCP - DISABLED (no credentials)
META_SOCIAL_MCP_ENABLED=false

# Twitter/X MCP - DISABLED (no credentials)
TWITTER_MCP_ENABLED=false

# WhatsApp MCP - DISABLED (no credentials)
WHATSAPP_MCP_ENABLED=false

# ===========================================
# ORCHESTRATOR SETTINGS
# ===========================================

# Maximum concurrent tasks
MAX_CONCURRENT_TASKS=5

# Task timeout in seconds
TASK_TIMEOUT=300

# Poll interval for checking new tasks
POLL_INTERVAL=30

# Maximum AI iterations per task
MAX_ITERATIONS=10

# ===========================================
# LOGGING
# ===========================================

# Logging level
LOG_LEVEL=INFO

# Audit log path
AUDIT_LOG_PATH=/home/digitalfte/Hacathan_2/Vault/Logs/audit

# Health log path
HEALTH_LOG_PATH=/home/digitalfte/Hacathan_2/Vault/Logs/health

# ===========================================
# RESOURCE LIMITS
# ===========================================

# Memory limit in MB (for systemd)
MEMORY_LIMIT_MB=8192

# CPU quota percentage (for systemd)
CPU_QUOTA_PERCENT=200

# ===========================================
# AI AGENT
# ===========================================

# AI model to use for drafting (from environment or default)
AI_MODEL=gemini-2.0-flash

# ===========================================
# SECURITY NOTES
# ===========================================
#
# 1. NO credentials are stored in this file
# 2. NO .env file is synced to cloud via Git
# 3. Cloud agent CANNOT execute sensitive actions
# 4. All drafts require human approval on Local agent
# 5. Audit logs capture all blocked execution attempts
#
